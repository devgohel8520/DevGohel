<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/lOGO.ico">
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-header">
                    <a href="@Url.Action("AIndex","Author",null)" class="navbar-brand">
                        @Request.Cookies["devgoheladmin"]["Name"].ToString()
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("LIndex","Label",null)">LABELS</a></li>
                    <li><a href="@Url.Action("SIndex","Sponser",null)">SPONSER</a></li>
                    <li><a href="@Url.Action("TIndex","Topic",null)">TOPICS</a></li>
                    <li><a href="@Url.Action("FIndex","File",null)">FILES</a></li>
                    <li><a href="@Url.Action("PIndex","Profile",null)">PROFILE</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" title="LOGOUT">
                    <li><a href="@Url.Action("Logout","Author",null)">LOGOUT</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="my-body">
        <div class="container" style="margin-bottom:30px;">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
