@model IEnumerable<DevGohel.Models.Topic>
@{
    ViewBag.Title = "Index";
}
<div class="content-start">
    <div class="col-lg-12 content-head">
        <div class="input-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-circle-arrow-right"></i></span>
            <input id="Search" name="Search" type="text" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
                <a id="searchLink" name="searchLink" class="btn btn-website"><i class="glyphicon glyphicon-search"></i></a>
            </span>
        </div>
    </div>
    @if (Model != null)
    {
        <div class="col-lg-12 content-data nopadding">
            <div class="row">
                <div class="col-lg-12 content-data-x text-center">
                    Latest Updated
                </div>
            </div>
        </div>
        foreach (var item in Model)
        {
            <div class="col-lg-3 content-data-hp"> @*style="background-color:@item.BgColor; color:@item.TxColor;">*@
                <a href='@Url.Action("Index", "Search", new { search=item.Ename})'>
                    <div class="row">
                        <div class="col-lg-12 content-data-hp-x">
                            <div class="head" style="color:@item.BgColor;">
                                @item.Name
                            </div>
                            <div class="text-right input-sm">
                                <i>@item.Label.Name</i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
    <div class="col-lg-12 content-data" style="margin-top:10px;">
        <div class="row">
            <div class="content-data-x">
                <div class="text-center">
                    <a class="btn btn-default btn-xs btn-space" href="@Url.Action("Feedback","Home")">
                        FEEDBACK
                    </a>
                    <a class="btn btn-default btn-xs btn-space" href="/devendra">
                        ABOUT ME
                    </a>
                    <a class="btn btn-default btn-xs btn-space" href="@Url.Action("Contact", "Home")">
                        CONTACT ME
                    </a>
                    <a class="btn btn-default btn-xs btn-space" href="https://www.youtube.com/channel/UCd6sD2lsL3k3UzONHMpVp9w" target="_blank">
                        YOUTUBE VIDEOS
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 content-data">
        <div class="row home-Background">
            <div class="col-lg-12 content-data-x text-center" style="padding:80px;">
                <h1 class="animated fadeInUp" data-delay="0.5">
                    I AM DEVELOPER
                </h1>
                <p class="animated fadeInUpBig" data-delay="1">
                    watch, learn and play
                </p>
                <p class="animated fadeInUpBig" data-delay="2">
                    As a developer what I have experienced and learning with day to day projects, I am making videos and writing content with proper defination. I love to share my knowledge of coding.
                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-12 content-data-youtube">
        <div class="row">
            <div class="col-lg-4 content-data-youtube-text">
                <div class="head">
                    Introduction
                </div>
                <p>
                    I am .Net Developer.I am very eager to learn computer languages. I am very simple but professional and sharp minded guy. I dedicate to my job. I strongly belive that we must love our passion which makes you fully dedicated person.
                </p>
                <p>
                    Here in this website I am writing about how to make - Application for web, windows, and mobo, Solving error, Sharp and clean code, learning .net languages with example and videos.
                </p>
            </div>
            <div class="col-lg-8 nopadding">
                <div class="videoWrapper">
                    <iframe width="640" height="360" src="//www.youtube.com/embed/rNUxx0eUZnA" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {

            var inputSearch = $('input#Search');
            inputSearch.on("keyup", function () {
                var btnSearch = $("a#searchLink");
                //btnSearch.addClass("disabled");

                var inputstr = $(this).val();
                var val = inputstr.replace(/[^a-z0-9\s]/gi, '-').replace(/[_\s]/g, '-')

                var searchLink = $("#searchLink");
                searchLink.removeAttr('href')

                searchLink.attr('href', '/' + val);

                if (inputstr.length > 0) {
                    btnSearch.text("Searching...")
                }
                else {
                    btnSearch.text("Search it")
                }

            });

            inputSearch.on("change", function () {
                var inputstr = $(this).val();
                var val = inputstr.replace(/[^a-z0-9\s]/gi, '-').replace(/[_\s]/g, '-')
                window.location.href = val;
            });
        });
    </script>
}